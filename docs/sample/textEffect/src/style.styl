@charset 'utf-8'
// ----------
// 共通
// ----------
*
*::before,
*::after
  box-sizing border-box

h1
  font-size 20px

dd
  margin .5em 0

// ----------
// エフェクト1 真っ二つ
// ----------
.ef1
  font normal 600 24px/1 sans-serif
  height 150px
  color #fff
  background-color #000

  // ラッパー
  &-wrap
    position relative
    height 100%
    margin-left 2em

  // 文字
  &-tx
    position absolute
    left 0
    top 0
    width 100%
    height 50%
    overflow hidden

  // はみ出し
  &-move
    position absolute
    left 0
    bottom -.5em

  // 下半分
  &-copied
    top 50%
    .ef1-move
      top -.5em
      bottom auto
