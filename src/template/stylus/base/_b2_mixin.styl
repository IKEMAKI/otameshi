//---------------------------------------------
// SP向けのデバイス幅に関する function群
//---------------------------------------------
base_sp_width = 750
/**
 * ベース幅 640pxで作成されたデザインに対して、
 * デバイス幅を維持した width/height/margin/padding サイズを返す関数。
 * 使い方
 *	 - width sprem(560)		// photoshop上で 560px
 *	 - height sprem(100)	 // photoshop上で 100px
 */
sprem(photoshop_on_px)
	// #{variable_name} は、変数展開に必要
	return "calc((100vw / %s ) * %s )" %(base_sp_width photoshop_on_px)

/**
 * ベース幅 640pxで作成されたデザインに対して、
 * デバイス幅を維持した font-size/line-height サイズを返す関数。
 * 使い方
 *	 - font-size spfsrem(34)		// photoshop上で 34px
 *	 - line-height spfsrem(36)	// photoshop上で 36px
 */

spfsrem(photoshop_on_px)
	return "calc( (100vw / %s ) * %s )" %(base_sp_width photoshop_on_px)

//---------------------------------------------
// SP以外のデバイス幅に関する function群
//---------------------------------------------
base_pc_width = 1024
/**
 * ベース幅 1024pxで作成されたデザインに対して、
 * デバイス幅を維持した width/height/margin/padding サイズを返す関数。
 * 使い方
 *	 - width sprem(560)		// photoshop上で 560px
 *	 - height sprem(100)	 // photoshop上で 100px
 */

base = "calc( 100vw / %s )" %base_pc_width

pcrem(photoshop_on_px)
	return "calc(( %s / %s ) *100vw )" %(photoshop_on_px base_pc_width)

/**
