//---------------------------------------------
// media query
//---------------------------------------------
MQ_PC = 768px
MQ_SP = 767.9px
MQ_TAB = base_width + 40px

mq_pc()
	@media screen and (min-width: MQ_PC)
		{block}

mq_sp()
	@media screen and (max-width: MQ_SP)
		{block}

mq_tab()
	@media (min-width: MQ_SP) and (max-width: MQ_TAB)
		{block}

//---------------------------------------------
// font-size
//---------------------------------------------
fs(size)
	font-size (size)px
	font-size (size / 10)rem

//---------------------------------------------
// transform
//---------------------------------------------
transform(x, y)
	transform translate(x, y)

//---------------------------------------------
// input
//---------------------------------------------
input_style()
	height 40px
	padding-left 10px
	padding-right 10px
	font-family font_family
	fs(12)
	box-sizing border-box


//---------------------------------------------
// select
//---------------------------------------------
select_style()
	height 40px
	padding-left 10px
	padding-right 0
	font-family font_family
	fs(12)
	box-sizing border-box

