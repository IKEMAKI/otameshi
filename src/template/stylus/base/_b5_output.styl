//--------------------------------------------
//
// _output
// 自動出力 variablesでオンオフを切り替える
//
//---------------------------------------------
//---------------------------------------------
//	font-size指定
//---------------------------------------------
if use_fs
	for i in (10..30)
		.fs{i}
			font-size: (i)px !important

//---------------------------------------------
//	text-align指定
//---------------------------------------------
if use_ta
	.tac
		text-align center !important
	.tal
		text-align left !important
	.tar
		text-align right !important

//---------------------------------------------
//	font-weight指定
//---------------------------------------------
if use_fw
	.fwb
		font-weight bold !important
	.fwn
		font-weight normal !important

//---------------------------------------------
//	width 0px-500px
//---------------------------------------------
if use_w
	for w in (0..100)
		.w{w*5}
			width (w)*5px !important

//---------------------------------------------
//	width 0%-100%
//---------------------------------------------
if use_wp
	for wp in (0..20)
		//width percentage( wp / 20)
		.w{wp*5p}
			width width !important

//---------------------------------------------
//	余白調整用のクラス
//---------------------------------------------
if use_spacing_classes
	for i in (0..20)
		.mt{i*5}
			margin-top 5px*(i) !important
			+mq_sp()
				margin-top (5px*(i) / 2) !important

		.mb{i*5}
			margin-bottom 5px*(i) !important
			+mq_sp()
				margin-bottom (5px*(i) / 2) !important

		.pt{i*5}
			padding-top 5px*i !important
			+mq_sp()
				padding-top (5px*(i) / 2) !important

		.pb{i*5}
			padding-bottom 5px *(i) !important
			+mq_sp()
				padding-bottom (5px*(i) / 2) !important
